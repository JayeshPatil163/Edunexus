<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecprac">

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:text="Enter test name"
        android:id="@+id/entrds"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/testdisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entrds"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"

        android:hint="Enter test name"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:minLines="2"
        android:paddingStart="5dp"
        android:scrollHorizontally="true"
        android:textColor="#555555"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Marks"
        android:id="@+id/entrmrks"
        android:layout_below="@id/testdisc"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="0"
        android:background="@drawable/edtbg"
        android:layout_below="@id/entrmrks"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date and Time"
        android:id="@+id/slctdt"
        android:layout_below="@id/marks"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/tstdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"

        android:hint="Select Date and time"
        android:layout_below="@id/slctdt"
        android:inputType="none"

         android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollHorizontally="true"
        android:textColor="#A0A0A0"
        android:textSize="24sp" />

    <!--<TextView
        android:id="@+id/dsnrpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="150dp"
        android:text="Does not repeat"
        android:layout_below="@id/tstdate"
        android:inputType="none"
        android:drawablePadding="10dp"
        android:backgroundTint="#FFFFFF"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scrollHorizontally="true"
        android:textColor="#A0A0A0"
        android:textSize="24sp"
        app:drawableLeftCompat="@drawable/baseline_repeat_24" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tstdate"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btns"
        android:backgroundTint="#000000"
        android:text="Save"
        android:textStyle="bold"
        android:textSize="20sp"
        android:backgroundTintMode="add"
        tools:ignore="TextSizeCheck" />

