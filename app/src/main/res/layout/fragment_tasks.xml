<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tasks">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tmbg"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:contentDescription="@string/app_name">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <TextView
            android:id="@+id/cls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/shadow_class"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="60dp"
            android:text="Class 1"
            android:textColor="#000000"
            android:textSize="38sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schdlp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cls"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btnclass"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:text=" Schedule Lecture/Practical"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/schdtsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schdlp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btnclass"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="10dp"
            android:paddingBottom="15dp"
            android:text=" Schedule Tests"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/asswrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schdtsk"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btnclass"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:textColor="@color/white"
            android:paddingBottom="15dp"
            android:text=" Assign Work"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/upldstmt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/asswrk"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/btnclass"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="Upload Learning Resources"
            android:textSize="24sp" />

        <TextView
        android:id="@+id/crtt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_below="@id/upldstmt"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btnclass"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:textColor="@color/white"
        android:paddingBottom="15dp"
        android:text="Assign activity"
        android:textSize="24sp" />

    </RelativeLayout>

</ScrollView>

</FrameLayout>