<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".teacherlogin">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bgteach" />

    <ImageView
        android:id="@+id/ll2"
        android:layout_width="141dp"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/inuse" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pno"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:drawableEnd="@drawable/baseline_mail_outline_24"
        android:drawablePadding="20dp"
        android:background="@drawable/txtthe"
        android:inputType="textEmailAddress"
        android:padding="13dp"
        android:text="@string/g_mail_here"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/sign_out"
        android:textAlignment="center"
        android:textColor="#858585"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="monospace" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt1"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round"
        android:backgroundTint="#000000"
        android:backgroundTintMode="add"
        android:text="login"
        android:textAlignment="center"
        android:textColor="#FA000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/txtthe"
        android:hint="Enter Your Name"
        android:drawableEnd="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        android:inputType="textAutoCorrect|textCapSentences"
        android:padding="13dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:drawableEnd="@drawable/baseline_phone_24"
        android:drawablePadding="20dp"
        android:background="@drawable/txtthe"
        android:hint="Enter Your Phone no."
        android:inputType="number"
        android:padding="13dp"
        android:textSize="20sp" />


</RelativeLayout>